 <%- contentFor('headtag') %>

 <%- contentFor('body') %>

      <!--app-content open-->
			<div class="app-content main-content mt-0">
				<div class="side-app">
					 <!-- CONTAINER -->
					 <div class="main-container container-fluid">
						<!-- PAGE-HEADER -->
						<div class="page-header">
							<div>
								<h1 class="page-title">برند ها</h1>
							</div>
							<div class="ms-auto pageheader-btn">
								<ol class="breadcrumb">
									<li class="breadcrumb-item"><a href="javascript:void(0);">برند ها</a></li>
									<li class="breadcrumb-item active" aria-current="page">صفحات</li>
								</ol>
							</div>
						</div>
						<!-- PAGE-HEADER END -->

            <div class="row">
               
              <div class="col-md-12">
          
              <div class="card ">
                  <div class="card-header border-bottom">
                    <h3 class="card-title">ساخت برند</h3>
                  </div>
                  <!-- /.card-header -->
                  <!-- form start -->
                  <form   method="post" action="/admin/brands/<%= brand.id %>?_method=put" enctype="multipart/form-data">

                    <%- include(viewPath('admin/layouts/error-messages')) -%>

                    <div class="card-body">
                      <div class="row">
          
                      <div class="col-md-6">
                      
                      <div class="form-group">
                        <label for="">نام برند (فارسی)</label>
                        <input type="text" name="persian_name" class="form-control mb-2" value="<%= old('persian_name',brand.persian_name) %>"  placeholder="">
                      
                      </div>
            
                     </div>

                     <div class="col-md-6">
                      
                      <div class="form-group">
                        <label for="">نام برند(اینگلیسی)</label>
                        <input type="text" name="original_name" class="form-control mb-2" value="<%= old('original_name',brand.original_name) %>"   placeholder="">
                      

                      </div>
            
                     </div>

                     <div class="col-md-6">
                      
                      <div class="form-group">
                            <div class="form-group">
                                <label for="logo">تصویر</label>
                                <!-- <input type="file" class="form-control file-input mb-2" name="logo" id="logo"> -->
                                <!-- <input type="file" name="logo" class="dropify" data-default-file="{{ asset($brand->logo['indexArray']['medium'] ) }}" data-height="200"  /> -->
                                <input type="file" name="logo"  id="logo"  class="dropify" data-default-file="<%= brand.getImage('480') %>" data-height="200"  />

                            </div>
                      </div>
            
                     </div>


                     <section class="col-md-6 ">
                      <div class="form-group">
                          <label for="status">وضعیت</label>
                          <select name="status" id="" class="form-control form-select mb-2" id="status">
                              <option value="0" <%= String(old('status',brand.status)) == "0" ? 'selected' : '' %>  >غیرفعال</option>
                              <option value="1" <%= String(old('status',brand.status)) == "1" ? 'selected' : '' %> >فعال</option>
                          </select>
                      </div>


                    </section>
                               
          
                    </div>
          
                    <div class="d-flex justify-content-center ">
                      <button type="submit" class="btn btn-primary col-md-4 edit" > ویرایش برند</button>
                    </div>
          
          
                    </div>
          
          
                  </form>
                </div>
              </div>
          </div>

					</div>
				</div>
			</div>
			<!-- CONTAINER END -->

      <%- contentFor('script') %>